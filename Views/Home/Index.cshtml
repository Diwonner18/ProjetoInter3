@{
    ViewData["Title"] = "Home Page";
}
<section class="container espaco d-flex justify-content-center">
    <div class="row d-flex justify-content-center col-8">
        <img src="~/images/logo.png" class="lg-logo" alt="Logo do site" />
        <form method="post" class="input-group" id="custom-search-input" action="#">
            <input type="text" id="search-bar" placeholder="Pesquise por médicos, especialidades ou consultórios" class="search-query form-control" name="pesquisa">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">
                    <span class="fa fa-search"></span>
                </button>
            </span>
        </form>
    </div>
</section>